{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "bin": {
    "server": "bin/wwww"
  },
  "main": "app.ts",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "lint": "tslint --project \"tsconfig.json\"",
    "test": "jest",
    "dev": "concurrently --names \"serverTS,serverNode,client\" \"npm run watch:ts\" \"npm run watch:node\" \"npm start --prefix ../frontend\"",
    "serve": "npm run build && npm start",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon dist/app.js",
    "test:watch": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "@trendmicro/react-sidenav": "^0.5.0",
    "@types/react-router": "^5.1.13",
    "awesome-react-icons": "^1.4.8",
    "common-js": "^0.3.8",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "mongoose": "^5.12.1",
    "morgan": "^1.9.1",
    "react": "^17.0.2",
    "react-minimal-side-navigation": "^1.8.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.9",
    "@types/supertest": "^2.0.9",
    "concurrently": "^5.2.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  }
}
