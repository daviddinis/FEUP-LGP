{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "lint": "tslint --project \"tsconfig.json\"",
    "test": "jest",
    "dev": "concurrently --names \"server,client\" \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "concurrently --names \"serverTS,serverNode\" \"npm run watch:ts\" \"npm run watch:node\"",
    "dev-client": "npm start --prefix frontend",
    "serve": "npm run build && npm start",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon dist/app.js",
    "test:watch": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage",
    "release": "standard-version"
  },
  "dependencies": {
    "@trendmicro/react-sidenav": "^0.5.0",
    "@types/react-router": "^5.1.14",
    "awesome-react-icons": "^1.4.8",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "common-js": "^0.3.8",
    "connect-mongo": "^4.4.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "docparser-node": "^1.2.2",
    "dotenv": "^8.6.0",
    "express": "~4.16.1",
    "express-session": "^1.17.1",
    "mongoose": "^5.12.8",
    "mongoose-seed": "^0.6.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "react": "^17.0.2",
    "react-dropzone": "^11.3.2",
    "react-icons": "^4.2.0",
    "react-minimal-side-navigation": "^1.8.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.14.45",
    "@types/supertest": "^2.0.9",
    "concurrently": "^5.2.0",
    "jest": "^26.6.0",
    "nodemon": "^2.0.4",
    "standard-version": "^9.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.6",
    "tslint": "^6.1.2",
    "typescript": "^4.2.4"
  }
}
